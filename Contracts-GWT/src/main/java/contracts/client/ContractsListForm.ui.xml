<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.cellTable {
	      border-bottom: 1px solid #ccc;
	      text-align: left;
	      margin-bottom: 4px;
	    }
	</ui:style>
	<g:HTMLPanel>
		<h1>Договора</h1>
		<g:Button styleName="{style.important}" ui:field="createButton" text = "Создать договор"/>
		<g:Button styleName="{style.important}" ui:field="openButton" text = "Открыть договор"/>
		<c:CellTable addStyleNames='{style.cellTable}' ui:field='contractsTable' />
	</g:HTMLPanel>
</ui:UiBinder> 